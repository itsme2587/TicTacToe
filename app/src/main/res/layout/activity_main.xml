        android:id="@+id/btn7"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:onClick="buttonClick"
        app:layout_constraintBottom_toBottomOf="parent"
